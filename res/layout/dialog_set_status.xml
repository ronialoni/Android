
  <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:id    = "@+id/dss_root" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:orientation = "vertical"
     android:background = "@drawable/background"
    > 
    
    <!-- Head -->
    
    <TextView android:id      = "@+id/dss_head"
        android:layout_width  = "fill_parent"
        android:layout_height = "wrap_content"
        android:textColor     = "#ffffff"
        android:textSize      = "20sp"
        android:textStyle     = "bold"
        android:typeface      = "serif"
        android:drawableLeft = "@drawable/status_icon"
        android:drawableRight = "@drawable/status_icon"
        android:gravity = "center"
        android:text          = "Set Your Status:"
       
        />    
     
     
 

       
	    <EditText android:id      = "@+id/dss_status"
	        android:layout_width  = "fill_parent" 
	        android:layout_height = "wrap_content"
	        android:layout_weight = "1"
            android:padding       = "25dp"
	        android:textColor     = "#000000"
	        android:textSize      = "15dp"
	        android:text          = ""
	        android:maxLines="3"
	        android:maxLength="140"
	        />   
	             

     <!-- Buttons -->
 
        <Button android:id        = "@+id/dss_button_ok" 
            android:layout_width  = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center" 
            android:minWidth="100dp"
            android:text          = "OK" 
            />
            
        
    </LinearLayout>