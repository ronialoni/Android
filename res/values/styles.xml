<resources>
    
    <style name = "SP" />
    
    
    
    <!-- BUTTON -->
    
    <style name = "SP.Button" 
        parent  = "@style/SP.Text.Primary.Widget"
        >        
        <item name = "android:layout_height" >wrap_content</item>    
        <item name = "android:layout_width"  >wrap_content</item>    

        <item name ="android:layout_margin" >2dip</item>
        
        <item name = "android:gravity"    >center</item>
        <item name = "android:background" >@drawable/selector_button</item>    
        
        <item name = "android:textColor" >@drawable/selector_button_text</item>
        <item name = "android:textSize"  >16dp</item>
    </style>
    
        
        <!-- CHANGE (DATE) -->
        
        <style name = "SP.Button.Change" >
            <item name = "android:layout_height" >fill_parent</item>    
                        
            <item name ="android:text"       >Change</item>
            <item name ="android:textSize"   >10dp</item>
        </style>
        
        
        
    <!-- TABLE ROW -->
    
    <style name = "SP.Tablerow" >
        <item name = "android:layout_height" >match_parent</item>    
        <item name = "android:layout_width"  >match_parent</item>    
        
        <item name = "android:paddingTop"    >4dip</item> 
        <item name = "android:paddingBottom" >4dip</item> 

        <item name = "android:paddingLeft"   >8dip</item> 
    </style>
    
    
    <!-- TEXT -->
        
    <style name = "SP.Text" >
        
        <item name = "android:layout_width"  >wrap_content</item>
        <item name = "android:layout_height" >wrap_content</item>
        <!-- 
        <item name = "android:layout_height" >wrap_content</item>
        <item name = "android:layout_width"  >wrap_content</item>
        
        <item name = "android:gravity" >center_vertical</item>
                 
        <item name = "android:drawablePadding" >4dip</item>   
         -->
        
        <item name = "android:typeface" >serif</item>
    </style>
        
        <!-- TEXT.PRIMARY -->
        <style name = "SP.Text.Primary" >            
            <item name = "android:textStyle" >bold</item>
        </style>
       
            <!-- TEXT.PRIMARY.WIDGET -->
            <style name = "SP.Text.Primary.Widget" >
                <item name = "android:textSize"  >16dp</item>
                <item name = "android:textStyle" >bold</item>
            </style>
        
            <!-- TEXT.PRIMARY.HEADER -->
            <style name = "SP.Text.Primary.Header" >
                <item name = "android:textSize" >24dp</item>
            </style>
        
            <!-- TEXT.PRIMARY.TITLE -->        
            <style name = "SP.Text.Primary.Title" >
                <item name = "android:textSize" >32dp</item>
            </style>
            
                   
    <!-- VIEW -->  
    
    <style name = "SP.View" />
    
    
                   
        <!-- VIEW.TEXT -->  
        
        <style name = "SP.View.Text" 
            parent  = "SP.Text"
            >            
            <item name = "android:layout_height" >wrap_content</item>
            <item name = "android:layout_width"  >wrap_content</item>
            <item name = "android:gravity" >center_vertical</item>
            <item name = "android:drawablePadding" >4dip</item>
        </style>    
        
            <style name = "SP.View.Text.Primary" 
                parent  = "SP.Text.Primary"
                >            
                <item name = "android:padding" >4dip</item>
            </style> 
        
        
            <!-- VIEW.TEXT.HEADER -->                         
            <style name = "SP.View.Text.Primary.Header" 
                parent  = "SP.Text.Primary.Header"
                >            
                <item name = "android:layout_width" >fill_parent</item>
                
                <item name = "android:gravity" >center_vertical</item>
                <item name = "android:padding" >4dip</item>
                <item name = "android:drawablePadding" >4dip</item>
            </style>    
            
            <!-- VIEW.TEXT.HEADER.TITLE --> 
            <style name = "SP.View.Text.Primary.Header.Title" 
                parent  = "SP.Text.Primary.Title"
                >            
                <item name = "android:gravity" >center</item>
            </style>    

            <!-- VIEW.TEXT.TITLE --> 
            <style name = "SP.View.Text.Primary.Title" 
                parent  = "SP.View.Text.Primary.Header.Title"
                >
                <item name = "android:gravity" >center</item>
            </style>            
            

            
    
    
    <!-- LAYOUT -->  
    
    <style name = "SP.Layout" />    
    
                                            
            
    <!-- DIALOG -->  
    
    <style name = "SP.Dialog" >  
        <item name = "android:layout_height" >wrap_content</item>
        <item name = "android:layout_width"  >fill_parent</item>
        <item name = "android:padding" >4dip</item>
    </style>    
    
    
        
        <!-- ROOT -->
        
        <style name = "SP.Dialog.Root" >
            <item name = "android:orientation" >vertical</item>
            
            <item name = "android:layout_height" >fill_parent</item>
            
            <item name = "android:background" >@drawable/background</item>
        </style>  
    
    
        <!-- BUTTONS -->
        
        <style name = "SP.Dialog.Buttons" >
            <item name = "android:orientation" >horizontal</item>
            
            <item name = "android:gravity" >center</item>
            
            <item name = "android:background" >@drawable/background</item>
            
        </style>  
    
        
    
        <!-- BODY -->        
        <style name = "SP.Dialog.Body" >
            <item name = "android:orientation" >vertical</item>
        </style>  
                        
        
        <!-- TITLE -->        
        <style name = "SP.Dialog.Title"
            parent  = "@style/SP.View.Text.Primary.Title"
            >            
            <item name = "android:background" >@drawable/background</item>
        </style> 
    
    
        <!-- HEADER -->    
        <style name = "SP.Dialog.Header"
            parent  = "@style/SP.View.Text.Primary.Header"
            >            
            <item name = "android:background" >@drawable/menu_item_background_pressed</item>
        </style> 
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Reflect">
		<item name="@android:windowEnterAnimation">@anim/pump_top</item>
		<item name="@android:windowExitAnimation">@anim/disappear</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Reflect">
		<item name="@android:windowEnterAnimation">@anim/pump_bottom</item>
		<item name="@android:windowExitAnimation">@anim/disappear</item>
	</style>
</resources>